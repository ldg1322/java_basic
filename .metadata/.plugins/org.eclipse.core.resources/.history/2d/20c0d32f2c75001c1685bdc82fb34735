package accessmodifier;

public class Warrior {// 정의부, 실행은 Main에서 할 예정임.
	
	public int hp;
	public int strangth;
	public String name;
	public int lv;
	public int money;
	
	// 생성자를 만들어주시되, name만 사용자에게 입력 받고
	// 나머지는 hp 20,str 3, lv 1, money 0을
	// 자동으로 입력받도록 해 주세요.
	
	public Warrior(String n) {
		hp = 20;
		strangth = 3;
		name = n; // 입력받은 사용자 이름 n을 name에 저장
		lv = 1;
		money = 0;
	}
	
	// hunt 메서드를 만들어보겠습니다.
	// 이 메서드는 실행시 사냥을 하는 상황을 구현하며
	// 채력이 2깎이고 돈을 10씩 획득합니다.
	// 사냥결과 체력이 x가 되었고, 소지금은 y입니다 라고 출력합니다.
	public void getInfo() {
		System.out.println("체력 : " + hp +
		           ", 힘 : " + strangth +
		           ", 레밸 : " + lv +
		           ", 돈 : " + money);
	}
		public void hunt() {
			hp -= 2;
			money += 10;
			System.out.println("구울을 잡았습니다. " + hp + "가 되었습니다., 소지금은" +
					           money + "얻었습니다");
					
	}

}
